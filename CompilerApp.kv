#:kivy 1.1.0
#:import os os
<Fnt_SpinnerOption>:
    font_name: self.text


<LoadDialog>:
    title: filechooser.path
    choosen_file: None
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            path: os.getcwd()

        BoxLayout:
            size_hint_y: None
            height: 25
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)
