<SaveDialog>:
    text_input: text_input
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            path: os.getcwd()
            on_selection: text_input.text = self.selection and self.selection[0] or ''

        TextInput:
            id: text_input
            size_hint_y: None
            height: 25
            multiline: False

        BoxLayout:
            size_hint_y: None
            height: 25
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Save"
                on_release: root.save(filechooser.path, text_input.text)


<ScrolllabelLabel>:
    Label:
        text: root.text
        font_size: 20
        text_size: self.width, None
        size_hint_y: None
        background_color: (1,1,1,1)
        height: self.texture_size[1]
